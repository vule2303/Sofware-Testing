<UserControl x:Class="TestBuilder.View.UserControls.TextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestBuilder.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="448">
    <Grid Background="White">
        <TextBox x:Name="txtInput" VerticalContentAlignment="Center" FontSize="16" FontWeight="Light"
                 Background="Transparent" TextChanged="txtInput_TextChanged"/>
        <TextBlock x:Name="tbPlaceholder" Text="{Binding Placeholder}" FontSize="16" FontWeight="Light"
                   Foreground="DarkGray" VerticalAlignment="Center" Margin="5,0,0,0"
                   Panel.ZIndex="-1"/>
        <Button x:Name="btnClear" Width="30" HorizontalAlignment="Right" Content="x"
                Background="Transparent" Foreground="LightGray" BorderThickness="0"
                Click="btnClear_Click"/>
    </Grid>
</UserControl>
